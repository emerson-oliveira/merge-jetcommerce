@model DomainProduct.Result

@if (Model != null && Model.Products.Any())
{
  <div class="ui container topsellers">
    <header class="section-title">
      Mais vendidos
      <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
      </div>
    </header>
    <div class="ui grid">
      <div class="row one column">
        <div class="column">
          <div class="ui doubling four cards centered slideshow" data-arrow="true" data-dots="false" data-qtd="4">

            @{
              var contador = 0;
              foreach (var product in Model.Products)
              {
                <!-- Page: ~/Views/Shared/Object/Product/_ProductInCard.cshtml -->
                @Html.Partial("~/Views/Shared/Object/Product/_ProductInCard.cshtml", product)

                contador++;

                /*
                if (contador >= 6)
                {
                  break;
                }*/

              }
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="ui divider hidden"></div>
}
